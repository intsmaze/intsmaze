	<!-- spring和MyBatis完美整合，不需要mybatis的配置映射文件 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dynamicDataSource" />
		<!-- 自动扫描mapping.xml文件 -->
		<property name="mapperLocations">
			<list>
				<value>classpath:mapping/*.xml</value>
				<value>classpath:1/*.xml</value>
			</list>
		</property>
		<!-- <property name="plugins"> <ref bean="paginationInterceptor" /> </property> -->
		<!-- 配置分页插件 -->
		<property name="plugins">
			<list>
				<bean id="paginationInterceptor" class="org.FDFBpersistence.common.PaginationInterceptor"></bean>
 				<bean class="com.github.pagehelper.PageHelper">
					<property name="properties">
						<value>
							dialect=mysql
							reasonable=true
						</value>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	

	<!-- DAO接口所在包名，Spring会自动查找其下的类 -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="org.FDFBpersistence.mapper" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory"></property>
	</bean>
