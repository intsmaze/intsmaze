<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.FDFBpersistence.mapper.IdentityRiskMapper" >
  <resultMap id="BaseResultMap" type="org.FDFBpersistence.pojos.IdentityRisk" >
    <id column="seqno" property="seqno" jdbcType="BIGINT" />
    <result column="lv2_div_name" property="lv2DivName" jdbcType="VARCHAR" />
    <result column="lv3_div_name" property="lv3DivName" jdbcType="VARCHAR" />
    <result column="counts" property="counts" jdbcType="VARCHAR" />
    <result column="id" property="id" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    seqno, lv2_div_name, lv3_div_name, counts, id
  </sql>
  <select id="selectYearNatureCount" resultType="java.lang.Integer" parameterType="org.FDFBpersistence.pojos.IdentityRisk" >
    select ifnull(sum(counts),0)
    from t_identity_risk
    where 1=1 
    and id =10011
	  <if test="lv2DivName != null" >
	       and lv2_div_name like '%${lv2DivName}%'
      </if>
      <if test="lv3DivName != null" >
	       and lv3_div_name like '%${lv3DivName}%'
      </if>
  </select>
  
  <select id="selectYearNatureCounts" resultType="java.lang.Integer" parameterType="java.lang.String" >
    select ifnull(sum(counts),0)
    from t_identity_risk
    where id = #{id,jdbcType=VARCHAR}
	and lv2_div_name like '%${lv2DivName}%' 
	and lv3_div_name like '%${lv3DivName}%' 
	and addtime = #{addTime,jdbcType=INTEGER}
  </select>
  
</mapper>