<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-lazy-init="true" default-init-method="init">

	<!-- Twemproxy工厂 -->
	<bean id="twemproxyFactory" class="com.intsmaze.redis.common.JedisFactory">
		<property name="timeout" value="2000" />
		<property name="addressList">
			<list>
				<value>127.0.0.1:6379</value>
			</list>
		</property>
	</bean>

	<bean id="twemproxyPool" factory-bean="twemproxyFactory"
		factory-method="createTwemJedisPool" />

	<bean id="CUDGroovy" class="com.intsmaze.groovy.util.DaoGroovy">
		<property name="twemproxyPool" ref="twemproxyPool" />
	</bean>


</beans>